{
    "model_name": "google/gemma-2b-it",
    "seq_length": 768,
    "dataset_name": "./data/food-order-understanding-sample-3k.json",
    "merge_with_final_checkpoint": false,
    "model_type": "gemma",
    "output_dir": "./output/gemma2b-food-order-understanding",
    "run_name": "sft_gemma2b_food_order_understanding",
    "num_train_epochs": 1,
    "logging_steps":20,
    "per_device_train_batch_size":2,
    "per_device_eval_batch_size":2,
    "gradient_accumulation_steps": 1,
    "gradient_checkpointing": false,
    "group_by_length": false,
    "learning_rate": 1e-4,
    "lr_scheduler_type": "cosine",
    "warmup_ratio": 0.03,
    "max_grad_norm": 0.3,
    "weight_decay": 0.05,
    "save_total_limit": 3,
    "save_strategy": "epoch",
    "optim": "paged_adamw_32bit",
    "bf16": true,
    "remove_unused_columns": false,
    "report_to": "wandb"
}
